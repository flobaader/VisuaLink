<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eehack.visualink.MainActivity">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flipper"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tree_without_leaves"
        android:id="@+id/treeView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tree_with_leaves"
            android:id="@+id/treeView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"/>

    </ViewFlipper>
    <TextView
        android:text="Kitchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bedroom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="11dp"
        android:id="@+id/kitchen"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:background="#fff"/>

    <TextView
        android:text="Living Room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/living_room"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="#fff"/>

    <TextView
        android:text="Bedroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="129dp"
        android:id="@+id/bedroom"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:background="#ffffff"
        android:layout_below="@+id/living_room"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Bathroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:id="@+id/bathroom"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:background="#fff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp" />

    <Button
        android:text="Chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_chart"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/total"
        android:layout_alignEnd="@+id/total" />

    <TextView
        android:text="-30%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:id="@+id/total"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/button_chart"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Total consumption:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalDesc"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:layout_above="@+id/total"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
